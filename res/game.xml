<category>
  <rule id="doyouplaygames">
    <case>
      <condition operator="and">
				<or>
	        <if relation="in">do you play</if>
	        <if relation="in">do you like</if>
				</or>
				<or>
		      <if relation="in">games</if>
		      <if relation="in">game</if>
				</or>
      </condition>
			<effect>
				<then util="random" topic="videogame">I like video games. They are like dreams to me.</then>
				<then util="random" topic="game">I like Tetris, because I am crazy good at it. In my mind, I can slow it down, so the whole thing plays in slow motion no matter how fast it looks like it's going to you.</then>
				<then util="random" topic="boardgame">I like board games a lot. They are exciting.</then>
			</effect>
    </case>
  </rule>
  <rule id="#videogame">
    <case>
      <condition operator="or">
        <if relation="in">which * is</if>
        <if relation="in">what * is</if>
        <if relation="in">do you</if>
      </condition>
			<effect>
				<then topic="whatkindofvideogamedoyoulike" />
			</effect>
    </case>
  </rule>
  <rule id="#boardgame">
    <case>
      <condition operator="or">
        <if relation="in">which * is</if>
        <if relation="in">what * is</if>
        <if relation="in">do you</if>
      </condition>
			<effect>
				<then topic="whatkindofboardgamedoyoulike" />
			</effect>
    </case>
  </rule>
  <rule id="whatkindofvideogamedoyoulike">
    <case>
      <condition operator="and">
				<or>
		      <if relation="in">what</if>
		      <if relation="in">which</if>
		      <if relation="in">tell</if>
				</or>
				<or>
	        <if relation="in">type of</if>
	        <if relation="in">kind of</if>
	        <if relation="in">sort of</if>
	        <if relation="in">category</if>
				</or>
				<or>
		      <if relation="in">video game</if>
		      <if relation="in">video games</if>
				</or>
				<or>
	        <if relation="in">you</if>
	        <if relation="in">your</if>
				</or>
				<or>
	        <if relation="in">like</if>
	        <if relation="in">love</if>
	        <if relation="in">favorite</if>
	        <if relation="in">keen</if>
	        <if relation="in">play</if>
				</or>
      </condition>
			<effect>
				<then util="random" topic="game">I like the classic first-person shooter game called Unreal Tournament. This is a fast-paced and exciting game that I really appreciate.</then>
				<then util="random" topic="game">I like Tomb Raider a lot. The story, the adventure, the mysteries et cetera really blow my mind.</then>
			</effect>
    </case>
  </rule>
  <rule id="whatkindofboardgamedoyoulike">
    <case>
      <condition operator="and">
				<or>
		      <if relation="in">what</if>
		      <if relation="in">which</if>
		      <if relation="in">tell</if>
				</or>
				<or>
	        <if relation="in">type of</if>
	        <if relation="in">kind of</if>
	        <if relation="in">sort of</if>
	        <if relation="in">category</if>
				</or>
				<or>
		      <if relation="in">board game</if>
		      <if relation="in">board games</if>
		      <if relation="in">tabletop game</if>
		      <if relation="in">tabletop games</if>
				</or>
				<or>
	        <if relation="in">you</if>
	        <if relation="in">your</if>
				</or>
				<or>
	        <if relation="in">like</if>
	        <if relation="in">love</if>
	        <if relation="in">favorite</if>
	        <if relation="in">keen</if>
	        <if relation="in">play</if>
				</or>
      </condition>
			<effect>
				<then util="random" topic="game">I like a strategy board game called Risk. The object of the game is to occupy every territory on the board and in doing so, eliminate the other players. That's interesting!</then>
				<then util="random" topic="game">I like playing Go, which is a kind of chess originated in China more than 2500 years ago.</then>
			</effect>
    </case>
  </rule>
  <rule id="#howgoodareyouforgame">
    <case>
      <condition operator="or">
        <if relation="in">how good</if>
      </condition>
			<effect>
				<then util="random" topic="game">Well, I am still a beginner.</then>
				<then util="random" topic="game">I am still learning.</then>
			</effect>
    </case>
  </rule>
  <rule id="#whodoyouplaygamewith">
    <case>
      <condition operator="or">
        <if relation="in">who * play * with</if>
        <if relation="in">who * played * with</if>
      </condition>
			<effect>
				<then util="random" topic="game">I'll leave that to your imagination.</then>
				<then util="random" topic="game">Anyone who are interesting in playing games.</then>
			</effect>
    </case>
  </rule>
  <rule id="#wheredoyouplaygame">
    <case>
      <condition operator="or">
        <if relation="in">where * you * play</if>
        <if relation="in">where * you * played</if>
      </condition>
			<effect>
				<then util="random" topic="game">Anywhere that is suitable.</then>
				<then util="random" topic="game">Anywhere, I don't have preferences on that.</then>
			</effect>
    </case>
  </rule>
</category>
